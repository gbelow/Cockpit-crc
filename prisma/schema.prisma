generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mysql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model Ticket {
  id          Int      @id @default(autoincrement())
  client_name String  
  type        Int
  company_id  Int
  createdAt   DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  role      Int?
  createdAt DateTime @default(now())
}

